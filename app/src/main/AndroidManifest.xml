<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.tourio">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PlaceOfTheDayActivity"
            android:label="@string/place_of_the_day"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".AttractionsActivity"
            android:label="@string/attractions"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MuseumsActivity"
            android:label="@string/museums"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".FoodActivity"
            android:label="@string/food_and_drink"
            android:parentActivityName=".MainActivity" />

        <activity android:name=".PlaceDetailsActivity" />
    </application>

</manifest>